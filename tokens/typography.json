{
  "font": {
    "family": {
      "base": {
        "$value": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
        "$type": "string"
      }
    },
    "size": {
      "base": {
        "$value": "1rem",
        "$type": "dimension"
      },
      "sm": {
        "$value": "0.875rem",
        "$type": "dimension"
      },
      "lg": {
        "$value": "1.25rem",
        "$type": "dimension"
      }
    },
    "weight": {
      "light": {
        "$value": 200,
        "$type": "number"
      },
      "base": {
        "$value": 400,
        "$type": "number"
      },
      "bold": {
        "$value": 700,
        "$type": "number"
      }
    }
  },
  "line": {
    "height": {
      "base": {
        "$value": 1.5,
        "$type": "number"
      }
    }
  }
}