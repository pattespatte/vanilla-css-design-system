{
  "scripts": {
    "switch:prod": "node scripts/switch-mode.js prod",
    "switch:dev": "node scripts/switch-mode.js dev",
    "combine:css": "concat-cli -f styles/variables/*.css styles/base/*.css styles/layout/*.css styles/components/*.css styles/utilities/*.css styles/custom.css -o styles/vanilla-combined.css",
    "purge:css": "node scripts/purge-css.js",
    "minify:css": "cleancss -o styles/vanilla-combined.min.css styles/vanilla-combined.purged.css && node scripts/postprocess-css.js",
    "build:css": "npm run combine:css && npm run purge:css && npm run minify:css",
    "css-to-tokens": "node scripts/css-to-tokens.js",
    "tokens-to-css": "node scripts/tokens-to-css.js",
    "css-to-figma": "node scripts/css-to-figma.js",
    "figma-to-css": "node scripts/figma-to-css.js",
    "css-to-tokens:watch": "nodemon --watch styles/ --ext css --exec 'npm run css-to-tokens'",
    "tokens-to-css:watch": "nodemon --watch tokens/ --ext json --exec 'npm run tokens-to-css'",
    "css-to-figma:watch": "nodemon --watch styles/ --ext css --exec 'npm run css-to-figma'",
    "figma-to-css:watch": "nodemon --watch figma/ --ext json --exec 'npm run figma-to-css'"
  },
  "devDependencies": {
    "postcss": "^8.5.1",
    "postcss-js": "^4.0.1",
    "clean-css-cli": "^5.6.3",
    "concat-cli": "^4.0.0",
    "purgecss": "^7.0.2"
  }
}